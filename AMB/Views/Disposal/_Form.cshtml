@model AMB.Models.Location

<p><b>Instructions:</b> Select a day of week, a disposal time and a return time.</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <label>Day of week:</label>
                <select id="day" name="day" class="form-control">
                    <option></option>
                    <option>Tuesday</option>
                    <option>Wednesday</option>
                    <option>Thursday</option>
                    <option>Friday</option>
                </select>
                <br />

                <label>Disposal time:</label>
                <div class="row">
                    <div class='col-sm-4'>
                        <div class='input-group date' id='datetimepicker3'>
                            <input type='text' id ="disposalTime" name="disposalTime" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>
                    </div>
                </div>

                <br />
                <label>Return time:</label>

                <div class="row">
                    <div class='col-sm-4'>
                        <div class='input-group date' id='datetimepicker4'>
                            <input type='text' id ="returnTime" name="returnTime" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <br/>
                <span id="error" class="text-danger"></span>

                <br />

                <br />
                <input id="submit" type="submit" style="display:none" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}



